sudo apt-get update

sudo apt-get upgrade 

# system env
sudo apt-get install curl && wget && screenfetch && htop && vim && git

# python env
1.python install pip
sudo apt-get install python-pip 

2.python install virtualenv 
pip install virtualenv

#pip upgrade
pip install -U pip

#change python mirror douban
1.linux 
~/.pip/pip.conf 
2.windows 
%HOME%\pip\pip.ini 

[global] 
index-url = http://pypi.douban.com/simple 
trusted-host = pypi.douban.com 

# node env
1.nvm install 
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.8/install.sh | bash
2.change node mirror taobao
export NVM_NODEJS_ORG_MIRROR=https://npm.taobao.org/mirrors/node/  && npm install -g cnpm




# zsh env
1.sudo apt-get update && sudo apt-get -y install zsh

2.oh-my-zsh install 
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# ubuntu desktop flat theme install
1.install the control panel
sudo apt-get install unity-tweak-tool

2.If you are on Ubuntu 16.04 or higher, run the commands below to install Ubuntu Tweak:
wget -q -O - http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu xenial-getdeb apps" >> /etc/apt/sources.list.d/getdeb.list'
sudo apt-get update
sudo apt-get install ubuntu-tweak

3. Using the noobslab PPA Theme
sudo add-apt-repository ppa:noobslab/themes
sudo apt-get update
sudo apt-get install flatabulous-theme

4. Flat Icons
sudo add-apt-repository ppa:noobslab/icons
sudo apt-get update
sudo apt-get install ultra-flat-icons



















